@import "../../app.wxss";

page {
  background-color: var(--main--gray--bg);
}

.usr-navibar{
  --td-navbar-bg-color: transparent;
}

.avatar-container{
  width: 92%;
  height: 240rpx;
  margin-left: 4%;
  margin-top: 50rpx;
  margin-bottom: 25rpx;
  background-color: var(--prime-white);
  border-radius: 23rpx;
  display: flex;
  align-items: center;
}


.avatar-container .my-avatar {
  --td-avatar-border-color: black;
  --td-avatar-border-width-large: 15srpx;
  margin-left: 30rpx;
}

.userProfile{
  margin-left: 40rpx
}

.userName{
  font-weight: 800;
  margin-left: 30rpx;
}

.userDetail{
  font-weight: 100;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.order-panel{
  margin-top: 25rpx;
  margin-bottom:25rpx;
}

.button-example {
  margin: 40rpx;
  display: flex;
  justify-content: space-between;
}
.container{
  height: 200rpx;
  margin: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
border-radius: 10px;
 transform: translate(0%,0%);
 background-color: white;
}

.container button{
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}


.container button image{
 width: 120rpx;
 height: 103rpx;
 border-radius: 50%;
}

.stepper-example {
  padding: 32rpx;
  background-color: var(--bg-color-demo);
}

.orders-panel{
  display: flex;
  align-items:baseline;
}

.commodity-title{
  font-size: 40rpx;
}

.commodity-detail{
  font-style: grey;
  font-size: 20rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}