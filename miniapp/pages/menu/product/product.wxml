<t-swiper class="product-swiper" current="{{current}}" autoplay="{{autoplay}}" duration="{{duration}}" x interval="{{interval}}" navigation="{{ { type: 'dots' } }}" list="{{productImg}}" bind:click="onTap" bind:change="onChange" bind:image-load="onImageLoad" >
</t-swiper>

<scroll-view class="product-detail">

  <view class="info">
  <view class="body">
    <text class="title">{{commodityName}}</text>
    <text class="description">
      食物属性：
        {{commodityRemark}}
    </text>
    <view class="demo">
      <text class="tag">种植溯源 : {{commodityOrigin}}</text>
      <text class="tag">品类 : {{commodityPartition}}</text>
      <text class="tag">采摘时间 : {{commodityUpdateTime}}</text>
    </view>
  </view>
</view>


</scroll-view>

<view class="floating">
  <view class="price-operation">
    <text class="price"> ￥{{price}}</text>
    <view class="stepper-conatiner">
      <t-stepper   min="0" size = "large" rdefaultValue="0" theme="filled" bind:change="onStepperChange" />
    </view>
  </view>
  

  <view class="button-container">
    <t-button class="cart" style="margin-right:90rpx ;" icon="cart-add" theme="primary" size="large" shape="round" bind:tap="addToCart">加入购物车</t-button>
    <t-button class="shop" icon="shop" theme="primary" size="large" shape="round" bind:tap="onBuyNow">立即购买</t-button>
  </view>
</view>