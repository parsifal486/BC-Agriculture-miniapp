<!--pages/menu/menu.wxml-->
<view>
<!-- 导航栏 -->
<t-navbar t-class-placeholder="t-navbar-placeholder" t-class-content="t-navbar-content" title="菜单">
  <view slot="capsule" class="custom-capsule">
    <t-icon
      size="20"
      bind:tap="onBack"
      aria-role="button"
      aria-label="返回"
      name="chevron-left"
      class="custom-capsule__icon back"
    />
    <t-icon
      size="20"
      bind:tap="onGoHome"
      aria-role="button"
      aria-label="首页"
      name="home"
      class="custom-capsule__icon home"
    />
  </view>
</t-navbar>

<!-- 搜索栏 -->
  <view class="search-bar">
    <image class="icon-search" src="../img/icon/search.png"></image>
    <input class="search-input" type="text" placeholder="输入搜索内容"/>
  </view>

<view class="side-bar-wrapper" style="height: calc(100vh - {{navbarHeight}}px)">
<!-- 左侧种类栏 -->
<!-- bind:tap="getAllCommodity" -->
  <t-side-bar  value="{{sideBarIndex}}" bind:change="onSideBarChange">
  <!--  wx:for="{{categories}}"
      wx:key="label"
      value="{{item.value || index}}"
      label="{{item.label}}"
      disabled="{{item.disabled}}"
      badge-props="{{item.badgeProps}}" -->
    <t-side-bar-item
    wx:for="{{categories}}"
    wx:key="index"
    value="{{index}}"
    label="{{item.label}}"
    />
  </t-side-bar>
  <view class="content" style="transform: translateY(-{{sideBarIndex * 100}}%)">
    <!-- wx:for="{{categories}}"
      wx:key="label"
      class="section" -->
    <scroll-view
    class="section"
    wx:for="{{categories}}"
    
      scroll-y
      scroll-top="{{scrollTop}}"
      scroll-with-animation
      show-scrollbar="{{false}}"
    >
      <view class="title">{{categories[sideBarIndex].label}}</view>
<!-- 右侧菜品显示 -->
      <t-cell-group>
        <block  wx:for="{{commodityNames}}" wx:key="index" wx:for-item="cargo">
          <t-cell  title="{{cargo.commodityName}}" >
            <!-- <view slot="footer" style="text-align: right; color: #888;">
              ￥{{cargo.commodityPrice}}
            </view> -->
            <t-image shape="round" src="{{cargo.image}}" slot="image" lazy 
            style="width: 96rpx; height: 96rpx; border: 2rpx solid #e7e7e7;" />
          </t-cell>
        </block>
      </t-cell-group>
    </scroll-view>
<!-- 右侧商品栏 -->
    <!-- <view class="product-container">  
      <image src="../img/temp/market-1.png" class="product-image"></image>  
      <view class="product-info">  
        <text class="product-name">野生莲藕</text>  
        <text class="product-price">¥888</text> 
        <image src="../img/icon/ic_img_add.png" class="product-add"></image>
      </view>
    </view> -->
    
  </view>
</view>
  <image src="../img/icon/ic-img-market.png" class="cart-icon"></image>
</view>

