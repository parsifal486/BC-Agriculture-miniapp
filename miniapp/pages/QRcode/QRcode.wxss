.product-card {
  display: flex;
  flex-direction: column;
  border-radius: 12px;
  overflow: hidden;
  margin: -90px 20px 0px 20px; /* 上边距增大，底部边距减少 */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  background-color: #f8f8f8;
  /* position: relative; 
  top: 200px;  */
}
.local-image {
  width:100%; /* 图片宽度设置为容器宽度的80% */
  height: 40%px; /* 高度自动调整以保持纵横比 */
  object-fit: cover; 
}
